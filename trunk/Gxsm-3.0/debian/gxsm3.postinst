#  		if [ -L "$gxsmplugindir" ]; then
#    			# It is a symlink!
#    			# Symbolic link specific commands go here.
#    			rm "$gxsmplugindir"
#			ln -s "/usr/lib/x86_64-linux-gnu/gxsm-plugins" "$gxsmplugindir" 
#			echo "renewed link to gxsm-plugins"
# 		else
#    			# It's a directory!
#    			# Directory command goes here.
#    			echo "native x86 or amd64 system - folder exists"
#  		fi
#	else
#		# neither link or folder
#		ln -s "/usr/lib/x86_64-linux-gnu/gxsm-plugins" "$gxsmplugindir" 
#		echo "amd64 system with x86 libs - created link to gxsm-plugins"
#	fi
	cd    
	;;

    abort-upgrade|abort-remove|abort-deconfigure)
	;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

